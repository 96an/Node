<%- include layouts/header.ejs %>
<div class="card-body">
    <form method="post" action="/employees/add">
        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text"  class="form-control"  name="name" required >
            </div>
        </div>
        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Address</label>
            <div class="col-sm-10">
                <textarea type="text"  class="form-control"  name="address" required ></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="text"  class="form-control"  name="email" required >
            </div>
        </div>
        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Phone</label>
            <div class="col-sm-10">
                <input type="text"  class="form-control"  name="phone" required >
            </div>
        </div>

        <input class="btn btn-primary" type="submit" name="submit" value="Save">
        <input class="btn btn-secondary" type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
    </form>
</div>
<%- include layouts/footer.ejs %>
